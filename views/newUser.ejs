    <body>
        <nav>
          <ul>
              <li><a href="/" class="nav-btn">Homepage</a></li>
              <% if (user) { %>
              <li><a href="/section/1dry" class="nav-btn">Begin To Reason</a></li>
              <li><a href="/profile" class="nav-btn">Profile</a></li>
              <li><a href="/auth/logout" class="nav-btn">Log out</a></li>
              <% } else { %>
              <li><a href="/auth/login" class="nav-btn">Login</a></li>
              <% } %>
          </ul>
        </nav>
        <header>
        </header>
        <main>
          <div class = "box" align = "center" >
              <h1>Update Profile Information</h1>
          </div>
          <br>
          Submit each category below seperately<br><br>


              <form action = "/profile/newUser/name" method = "POST">
              Preferred First Name: <input type = "text" name = "firstName" placeholder="ex: Andrew">
              <input type = "submit" name = "submit" value = "Update Name" style="float: right;">
              </form>

              <br>
              <form action = "/profile/newUser/school" method = "POST">
                Your School Name: <select name="schoolname">
                  <option value="Other">Other</option>
                  <option value="High School">High School</option>
                  <option value="Clemson">Clemson</option>
                  <option value="Florida Atlantic">Florida Atlantic</option>
                  <option value="Indiana University Southern">Indiana University Southern</option>
                </select>
                <input type = "submit" name = "submit" value = "Update School" style="float: right;">
              </form>

                <br>

              <form action = "/profile/newUser/year" method = "POST">
                Your Graduation Year: <input type = "number" name = "year" value="2021" min="1950" max="2030" >
              <input type = "submit" name = "submit" value = "Update Graduation" style="float: right;">
              </form>

              <br>

              <form action = "/profile/newUser/class" method = "POST" >
                Your CPSC Class: <select name="class">
                  <option value="0000">Other</option>
                  <option value="0000">None</option>
                  <option value="1010">1010</option>
                  <option value="1020">1020</option>
                  <option value="1060">1060</option>
                  <option value="1070">1070</option>
                  <option value="2070">2070</option>
                  <option value="2120">2120</option>
                  <option value="2150">2150</option>
                  <option value="2310">2310</option>
                  <option value="3300">3300</option>
                  <option value="3600">3600</option>
                  <option value="3270">3270</option>
                  <option value="3520">3520</option>

                </select>
                <input type = "submit" name = "submit" value = "Update Class" style="float: right;">
              </form>

                <br>

          <a class = "update-btn" href="/profile">Go Back To Profile</a>
        </main>
